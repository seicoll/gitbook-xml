{
    "title": "Llenguatge de marques (XML)",
    "author": "Sergi Coll",
    "language": "ca",
    "plugins": [
        "etoc",
        "-highlight",
        "sunlight-highlighter",
        "collapsible-chapters",
        "back-to-top-button"
    ],
    "styles": {
        "pdf": "./styles/pdf.css",
        "website": "./styles/website.css"
    },
    "pluginsConfig": {
        "etoc": {
            "mindepth": 2,
            "maxdepth": 4,
            "notoc": false
        },
        "theme-default": {
            "showLevel": false
        },
        "sunlight-highlighter": {
            "theme": "light",
            "lineNumber": false
         },
        "collapsible-chapters":{}
    }
}